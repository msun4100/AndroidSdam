<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_tabthree"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="3dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/image_bg_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/d_write_bg" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/b_main_view_contents_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="9dp"
            android:baselineAligned="true"
            android:gravity="bottom" >

            <ImageView
                android:id="@+id/image_report"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="9dp"
                android:src="@drawable/b_main_view_contents_icon_01" />

            <LinearLayout
                android:id="@+id/frame_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/image_distance"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/b_main_view_contents_icon_02" />

                <TextView
                    android:id="@+id/text_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:text="20km"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#b3ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/image_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/b_main_view_contents_icon_03" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:hint="time.."
                    android:text="3분 전"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#b3ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:visibility="invisible" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:id="@+id/frame_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp" >

                <ImageView
                    android:id="@+id/image_reply"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/b_main_view_contents_icon_04" />

                <TextView
                    android:id="@+id/text_reply_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#b3ffffff"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp" >

                <ImageView
                    android:id="@+id/image_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/b_main_view_contents_icon_05_off" />

                <TextView
                    android:id="@+id/text_like_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#b3ffffff"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="내 옆에서 지켜봐 주고 응원해 주는 좋은 친구들이 있어 너무 다행인 것 같아요."
            android:maxLength="18"
            android:maxLines="3"
            android:textColor="#ffffffff"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_emoticon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/b_main_view_1_emoticon_01happy" />

</FrameLayout>