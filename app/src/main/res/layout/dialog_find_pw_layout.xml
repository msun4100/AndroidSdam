<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="170dp"
    android:background="@drawable/z_popup_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="쓰담 이메일 입력"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff3e3e3e"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="입력한 이메일로\n임시 비밀번호가 전송됩니다."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff898989"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_dialog_pw"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="이메일 입력..."
        android:inputType="textEmailAddress"
        android:textSize="12sp" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_dialog_cancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/z_popup_cancel_selector" />

        <Button
            android:id="@+id/btn_dialog_ok"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/z_popup_ok_selector" />

    </LinearLayout>

</LinearLayout>
