<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:id="@+id/detail_reply_layout"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_reply_best"
                android:layout_width="30dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/b_main_view_2_detail_comments_best"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_reply_me"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@drawable/b_main_view_2_detail_comments_my"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/frame_reply_nick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/text_reply_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:padding="0dp"
                    android:text="남방긴수염고래"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ff898989"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:hint="30분전.."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff898989"
                android:textSize="10sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="6"
            android:maxLength="170"
            android:ems="10"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/frame_reply_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/image_reply_like"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/b_main_view_contents_icon_05_off" />

            <TextView
                android:id="@+id/text_reply_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:hint="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/sdam_text_color"
                android:textSize="12sp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/FrameLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/text_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="댓글 내용..."
                android:maxLength="170"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff3e3e3e"
                android:textSize="13sp" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>