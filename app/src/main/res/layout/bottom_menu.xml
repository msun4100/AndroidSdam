<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >


<LinearLayout
            android:id="@+id/menu_anim"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@drawable/b_main_navigationbar" >

            <Button
                android:id="@+id/imageButton1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/b_main_navi_home_selector" />

            <Button
                android:id="@+id/imageButton2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/b_main_navi_search_selector" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:ems="10"
                android:focusable="false"
                android:visibility="invisible" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/imageButton3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/b_main_navi_alarm_selector" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/b_main_navigationbar_notice_box"
                    android:text="  1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />

            </FrameLayout>

            <Button
                android:id="@+id/imageButton4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/b_main_navi_my_selector" />

        </LinearLayout>
</LinearLayout>