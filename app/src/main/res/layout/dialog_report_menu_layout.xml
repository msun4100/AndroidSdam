<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="144dp"
    android:background="@drawable/z_popup_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_report1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_report1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="15dp"
            android:text="신고하기"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff3e3e3e"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_report2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_report2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="7dp"
            android:text="더 이상 보지 않기"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff3e3e3e"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_report3"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_report3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="차단하기"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff3e3e3e"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>