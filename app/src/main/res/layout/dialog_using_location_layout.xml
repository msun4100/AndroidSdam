    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/btn_dialog_cancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/z_popup_cancel_selector" />

        <Button
            android:id="@+id/btn_dialog_ok"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/z_popup_ok_selector" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/text_dialog_refeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="다시 보지 않기"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff898989"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chk_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" 
            android:visibility="gone"/>

<!-- android:background="@drawable/check_selector" android:button="@null"-->
    </LinearLayout>

