<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/g_setting_actionbar"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/image_set_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/z_actionbar_back_button" />
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_gb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="33dp"
                    android:text="개인 설정"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff898989"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_pw_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/g_setting_layout_color_selector" >

                <ImageView
                    android:id="@+id/image_set_pw"
                    android:layout_width="14dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/g_setting_icon_01" />

                <TextView
                    android:id="@+id/garbagetext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="암호 및 잠금 설정"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff626262"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_pw_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/set_pw_change_layout"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@drawable/g_setting_layout_color_selector"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/text_set_pw_pw_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:text="로그인 암호 변경하기"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff626262"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/set_pw_lock_change_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/g_setting_layout_color_selector"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/text_set_pw_lock_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="39dp"
                        android:text="잠금 암호 설정하기"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff626262"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/set_pw_switch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffffff"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/garbagetext33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:text="잠금 설정"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff626262"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:visibility="invisible" >

                        <requestFocus />
                    </EditText>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/set_lock_switch"
                        android:layout_width="40dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="15dp"
                        android:textOff="NO"
                        android:textOn="YES" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_alarm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/g_setting_layout_color_selector" >

                <ImageView
                    android:id="@+id/image_set_alarm"
                    android:layout_width="14dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/g_setting_icon_02" />

                <TextView
                    android:id="@+id/garbagetext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="알림"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff626262"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_alarm_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/garbagetext3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39dp"
                    android:text="새로운 소식 듣기"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ff626262"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:visibility="invisible" >

                    <requestFocus />
                </EditText>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/set_alarm_switch"
                    android:layout_width="40dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="15dp"
                    android:textOff="NO"
                    android:textOn="YES" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_feed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/g_setting_layout_color_selector" >

                <ImageView
                    android:id="@+id/image_set_feed"
                    android:layout_width="14dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/g_setting_icon_03" />

                <TextView
                    android:id="@+id/garbagetext4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="피드 범위"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff626262"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_feed_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/gt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39dp"
                    android:text="나이"
                    android:textColor="#ff626262"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >

                    <TextView
                        android:id="@+id/minValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:text="0"
                        android:textColor="#ff626262"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/maxValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="145dp"
                        android:text="100"
                        android:textColor="#ff626262"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/garbagetext6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:text="거리"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ff626262"
                        android:textSize="12dp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >
                    </FrameLayout>

                    <SeekBar
                        android:id="@+id/set_feed_dist"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/set_feed_dist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="담너머"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_gb11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="33dp"
                    android:text="기타"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff898989"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_invite_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/g_setting_layout_color_selector" >

                <ImageView
                    android:id="@+id/image_set_invite"
                    android:layout_width="14dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/g_setting_icon_04" />

                <TextView
                    android:id="@+id/garbagetext8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="초대"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff626262"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_invite_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="39dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/set_invite_kakao_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/g_setting_layout_color_selector"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/image_set_invite_kakao"
                            android:layout_width="20dp"
                            android:layout_height="33dp"
                            android:src="@drawable/g_setting_04_icon_01kakao" />

                        <TextView
                            android:id="@+id/garbagetext12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="카카오톡으로 초대하기"
                            android:textColor="#ff626262"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/set_invite_facebook_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/g_setting_layout_color_selector"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/image_set_invite_facebook"
                            android:layout_width="20dp"
                            android:layout_height="33dp"
                            android:src="@drawable/g_setting_04_icon_02face" />

                        <TextView
                            android:id="@+id/garbagetext13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="페이스북으로 초대하기"
                            android:textColor="#ff626262"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_support_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/g_setting_layout_color_selector" >

                <ImageView
                    android:id="@+id/image_set_support"
                    android:layout_width="14dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/g_setting_icon_05" />

                <TextView
                    android:id="@+id/garbagetext122"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="운영 지원"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff626262"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_support_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="39dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/set_support_report_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/g_setting_layout_color_selector"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_set_support_repot"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="문의 메일 및 오류신고"
                            android:textColor="#ff626262"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/set_support_termchk_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/g_setting_layout_color_selector"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_set_support_termchk"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:text="약관 확인"
                            android:textColor="#ff626262"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_logout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/g_setting_layout_color_selector"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/image_set_logout"
                    android:layout_width="14dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/g_setting_icon_07" />

                <TextView
                    android:id="@+id/garbagetext124"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="로그아웃"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff626262"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_unsign_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/g_setting_layout_color_selector"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/image_set_withdrawal"
                    android:layout_width="14dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/g_setting_icon_06" />

                <TextView
                    android:id="@+id/garbagetext123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="회원 탈퇴"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ff626262"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>